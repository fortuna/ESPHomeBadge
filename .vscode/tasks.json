{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "env": {
            "PLATFORMIO_BUILD_CACHE_DIR": "${workspaceFolder}/.esphome/build_cache"
        }
    },
    "tasks": [
        {
            "label": "Build Current File",
            "type": "process",
            "command": "esphome",
            "args": ["compile", "${file}"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "Lint YAML",
            "type": "shell",
            "command": "pipx run yamllint **/*.yaml",
            "group": "test",
        }, 
        {
            "label": "Deploy no screen firmware",
            "type": "process",
            "command": "esphome",
            "args": ["run", "firmware_no_screen/main.yaml"],
            "group": "build",
            "problemMatcher": [],
        },
        {
            "label": "Build no screen firmware",
            "type": "process",
            "command": "esphome",
            "args": ["compile", "firmware_no_screen/main.yaml"],
            "group": "test",
            "problemMatcher": [],
        },
        {
            "label": "Deploy screen firmware",
            "type": "process",
            "command": "esphome",
            "args": ["run", "firmware_screen/main.yaml"],
            "group": "build",
            "problemMatcher": [],
        },
        {
            "label": "Build screen firmware",
            "type": "process",
            "command": "esphome",
            "args": ["compile", "firmware_screen/main.yaml"],
            "group": "test",
            "problemMatcher": [],
        }
    ]
}
